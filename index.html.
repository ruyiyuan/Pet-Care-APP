<body>

<div class="container">

<h1>PetCare â€” Safety First Platform (Demo)</h1>
<p>Book day care, dog walking, boarding, or in-home vet services.</p>

<div class="card">
<h3>Create Booking</h3>

<input id="owner" placeholder="Owner Name">
<input id="pet" placeholder="Pet Name">

<select id="service">
<option>Day Care</option>
<option>Dog Walking</option>
<option>Boarding</option>
<option>In-Home Vet</option>
</select>

<input type="date" id="start">

<label>
<input type="checkbox" id="cert">
 I confirm I completed Pet Health & Safety Training
</label>

<textarea id="notes" placeholder="Notes"></textarea>

<button onclick="addBooking()">Submit Booking</button>
</div>

<div class="card">
<h3>Bookings</h3>
<div id="list"></div>
</div>

</div>

<script>
let bookings = JSON.parse(localStorage.getItem("petcare") || "[]");

function save() {
  localStorage.setItem("petcare", JSON.stringify(bookings));
}

function addBooking() {
  let owner = document.getElementById("owner").value;
  let pet = document.getElementById("pet").value;
  let service = document.getElementById("service").value;
  let start = document.getElementById("start").value;
  let cert = document.getElementById("cert").checked;
  let notes = document.getElementById("notes").value;

  if (!owner || !pet || !start) {
    alert("Please fill required fields.");
    return;
  }

  if (!cert) {
    alert("Training confirmation required.");
    return;
  }

  bookings.push({ owner, pet, service, start, notes });
  save();
  render();
}

function render() {
  let list = document.getElementById("list");
  list.innerHTML = "";

  bookings.forEach(b => {
    let div = document.createElement("div");
    div.className = "booking";
    div.innerHTML = `
      <strong>${b.pet}</strong> - ${b.service}<br>
      Owner: ${b.owner}<br>
      Date: ${b.start}<br>
      Notes: ${b.notes}
    `;
    list.appendChild(div);
  });
}

render();
</script>

